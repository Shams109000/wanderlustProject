<% layout('/layouts/boilerplate') %>
<body style="background-color: white">
  <%= success  %>
  <style>
   #filters {
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  align-items: center;
  /* background-color: aqua; */
  
}

.filter {
  text-align: center;
  margin-top: 1rem;
  margin-left: 1rem;
  opacity: 0.7;
  flex: 1 1 calc(33.333% - 2rem); /* Adjusts items to take up a third of the container width minus margin */
  box-sizing: border-box;
  /* background-color: black; */
}

.filter:hover {
  opacity: 1;
  cursor: pointer;
}

.tax-toggle {

  text-align: center;
  border: 1px solid black;
  border-radius: 1rem;
  height: 3.25rem;
  padding: 1rem;
  display: flex;
  align-items: center;
  font-size: 0.85rem;
  /* background-color: burlywood; */
}
.tax-info{
  display: none;
}

/* Responsive styles */
@media (min-width: 769px) {
  .filter {
    flex: 1 1 calc(10% - 2rem); /* Two items per row on medium screens */
  }
}
@media (max-width: 768px) {
  .filter {
    flex: 1 1 calc(30% - 2rem); /* Two items per row on medium screens */
  }
}

@media (max-width: 576px) {
  .filter {
    flex: 1 1 25%; /* One item per row on small screens */
    margin-right: 0; /* Remove right margin for single column */
  }

  .tax-toggle {
    margin-top: 0.6rem;
    display: none ;
  }
}

  </style>
  <div id="filters">
    <div class="filter">
      <div> <i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </div>
    <div class="filter">
      <div> <i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>
    <div class="filter">
      <div> <i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic Cities</p>
    </div>
    <div class="filter">
      <div> <i class="fa-solid fa-fort-awesome"></i></div>
      <p>Castles</p>
    </div>
    <div class="filter">
      <div> <i class="fa-solid fa-person-swimming"></i></div>
      <p>Amazing Pools</p>
    </div>
    <div class="filter">
      <div> <i class="fa-solid fa-mountain"></i></div>
      <p>Mountains</p>
    </div>
    <div class="filter">
      <div> <i class="fa-solid fa-campground"></i></div>
      <p>Camping</p>
    </div>
    <div class="filter">
      <div> <i class="fa-solid fa-cow"></i></div>
      <p>Farms</p>
    </div>
    <div class="filter">
      <div> <i class="fa-solid fa-snowflake"></i></div>
      <p>Arctic</p>
    </div>
   <div class="tax-toggle ">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox"  id="mySwitch" name="darkmode"  role="switch">
      <label class="form-check-label" for="mySwitch"><b>Display total after taxes</b></label>
    </div>
   </div>
  </div>
  <div
    class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1 mt-3"
    style="background-color: white"
  >
    <% for(let listing of allListing){ %>

    <a href="/listings/<%= listing._id  %>" class="listing-link">
      <div class="card listing-card col">
        <img
          src="<%= listing.image.url  %>"
          class="card-img-top"
          alt="listing-img"
          style="height: 20rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b>
            <br />
            &#8377; <%= listing.price.toLocaleString('en-IN') %>/night
            <i class="tax-info">&nbsp;&nbsp;+18% GST</i>
          </p>
        </div>
      </div>
    </a>

    <% } %>
  </div>

  <script>
    let taxSwitch=document.getElementById("mySwitch")
    taxSwitch.addEventListener('click',()=>{
      let taxInfo=document.getElementsByClassName('tax-info')
      for(let info of taxInfo){
        if(info.style.display!='inline'){
          info.style.display='inline'
        }
        else{
          info.style.display='none'
        }
      }
      console.log('clicked',taxInfo);
    })
  </script>
</body>
