<% layout('/layouts/boilerplate') %>

<body>
 <div class="row mt-3">
    <div class="col-8 offset-2">
        <h3>Edit your listing</h3>
        <form method="post" enctype="multipart/form-data" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation">
          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input
              id="title"
              value="<%= listing.title %>"
              type="text"
              name="listing[title]"
              class="form-control"
              required
            />
          <div class="invalid-feedback">title can't be empty</div>
          </div>
          <div class="mb-3">
            <label for="description" class="form-label">description</label>
            <textarea
              class="form-control"
              id="description"
              name="listing[description]"
              rows="5"
              cols="35"
              required
            ><%= listing.description %></textarea>
          <div class="invalid-feedback">description can't be empty</div>
          </div>
          <div class="mb-3">
              Original Image <br>
              <img src="<%= originalImageUrl  %>" width="220" >
          </div>
          <div class="mb-3">
            <label for="image" class="form-label">Upload new image</label>
            <input
              id="image"
              class="form-control"
              type="file"
              name="listing[image]"
              
            />
          </div>
          <div class="row">
              <div class="mb-3 col-md-4">
                  <label for="price" class="form-label">price</label>
                  <input
                    id="price"
                    value="<%= listing.price %>"
                    type="number"
                    name="listing[price]"
                    class="form-control"
                    required
                  />
          <div class="invalid-feedback">price can't be empty</div>

                </div>
            
                <div class="mb-3 col-md-8">
                  <label for="country" class="form-label">country</label>
                  <input
                    id="country"
                    value="<%= listing.country %>"
                    type="text"
                    name="listing[country]"
                    class="form-control"
                    required
                  />
          <div class="invalid-feedback">country can't be empty</div>

                </div>
          </div>
        
          <div class="mb-3">
            <label for="location" class="form-label">location</label>
            <input
              id="location"
              value="<%= listing.location %>"
              type="text"
              name="listing[location]"
              class="form-control"
              required
            />
          <div class="invalid-feedback">location can't be empty</div>

          </div>
      
          <button class="btn btn-dark edit-btn my-3 " type="submit">Edit</button>
        </form>
    </div>
 </div>
</body>
